# Environment Variables Template
# Copy this to .env and fill in your actual values
# NEVER commit .env to version control!

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/task_management
DB_USERNAME=your_db_username
DB_PASSWORD=your_secure_db_password

# Test Database Configuration  
TEST_DB_URL=jdbc:postgresql://localhost:5433/task_management_test
TEST_DB_USERNAME=test_user
TEST_DB_PASSWORD=your_secure_test_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_if_needed

# JWT Configuration
JWT_SECRET_KEY=your-256-bit-secret-key-here-must-be-very-long-and-secure
JWT_ISSUER=task-management-api
JWT_EXPIRATION_MINUTE=1440

# Application Configuration
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# Docker Registry (if using private registry)
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password
DOCKER_REGISTRY=your.registry.com

# Server Deployment (for CI/CD)
SERVER_HOST=your.server.ip
SERVER_USER=your_server_username
# SERVER_SSH_KEY will be added as GitHub secret

# Notification Settings
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Production Database (different from dev)
PROD_DB_URL=jdbc:postgresql://prod-db-server:5432/task_management_prod
PROD_DB_USERNAME=prod_user  
PROD_DB_PASSWORD=very_secure_production_password